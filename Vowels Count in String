package com.company;

import com.sun.jdi.Value;
import org.w3c.dom.ls.LSOutput;

import java.security.spec.RSAOtherPrimeInfo;
import java.util.*;

public class Main {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        System.out.print("Enter the string: ");
        StringBuffer stringBuffer=new StringBuffer(in.nextLine());
        int counter=0;
        for(int i=0;i<stringBuffer.length();i++)
        {
            if(stringBuffer.charAt(i)=='a' || stringBuffer.charAt(i)=='e' || stringBuffer.charAt(i)=='i' || stringBuffer.charAt(i)=='o' ||
                    stringBuffer.charAt(i)=='u' || stringBuffer.charAt(i)=='A' || stringBuffer.charAt(i)=='E' || stringBuffer.charAt(i)=='I' ||
                stringBuffer.charAt(i)=='O' ||stringBuffer.charAt(i)=='U')
                counter++;
        }
        System.out.println("The total number of vowels is "+counter);

    }


}

